# MCP Operations Infrastructure Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_NAME=mcp-ops-server
DEBUG=false

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Enable/disable authentication (set to false for local development)
AUTH_ENABLED=true

# API keys with roles (format: key1:role1,key2:role2)
# Roles: admin, analyst, readonly
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your-admin-key-here:admin,your-analyst-key-here:analyst

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (for audit logs)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_password
POSTGRES_DB=mcp_audit

# SQLite (for operations data)
SQLITE_PATH=data/operations.db

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Tavily Search API (https://tavily.com)
TAVILY_API_KEY=your-tavily-api-key-here

# =============================================================================
# AUDIT CONFIGURATION
# =============================================================================
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
